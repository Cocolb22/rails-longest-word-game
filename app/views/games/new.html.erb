<h1>New Game</h1>

<div class="framed">
  <% @letters.each do |letter| %>
    <p class="letters"><%=letter %> </p>
  <% end %>
</div>


<div class="answer">
  <p class="sentence">WHAT IS THE LONGEST WORD YOU CAN FIND ?</p>

  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" placeholder="enter your word">
    <input type="submit">
  </form>
</div>
